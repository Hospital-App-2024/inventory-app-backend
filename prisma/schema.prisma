generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OwnerType {
  AREA
  WORKER
}

model Owner {
  id      String    @id @default(uuid())
  name    String
  type    OwnerType
  Product Product[]
}

enum ProductStatus {
  GOOD
  BAD
  DISCONTINUED
  TRANSFERRED
}

model Product {
  id              String        @id @default(uuid())
  inventoryNumber String
  name            String
  quantity        Int
  status          ProductStatus
  owner           Owner         @relation(fields: [ownerId], references: [id])
  ownerId         String
  image           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}
